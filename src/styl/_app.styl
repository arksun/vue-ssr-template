#app
  font-family Futura, FuturaMed, FuturaBol, Georgia
a
  color black
  text-decoration none
a.elle
  transition color .3s ease
  &:hover
    color c-3
    mxBorder(b, 2, c-1)
input[type="text"]
  width 100%
  height 100%
  background-color transparent
  border none
  mxBorder(b, , white)
  &::placeholder
    color c-3

.scr-wide
  width 1100px
  margin 0 auto
.view
  .headline
    font-size 1.7rem
    line-height 1.7
    font-family 'FuturaMed'
    text-transform uppercase
    span
      display inline-block
      height 100%
      //text-decoration underline c-1
      border-bottom 5px solid c-1
      margin-right 10px
    .fa
      cursor pointer
  .bg-block
    background-color c-5
.block
  padding-top 20px
  padding-bottom 20px
  &.widget
    padding-top 0
    padding-bottom 0
@media (max-width 1100px)
  .scr-wide
    width 100%
  .view
    .headline
      font-size 1.4rem
      line-height 1.4
      padding-left 20px
      padding-right 20px
@media (max-width 768px)
  .block
    padding-top 10px
    padding-bottom 10px

// static
.page-content
  main
    padding 40px 90px
    font-family Georgia
    h1, h2, h3, h4
      font-family Futura
    h1
      font-size 2.2em
      letter-spacing .8px
    h2
    h3
      margin 40px 0
      text-transform uppercase
    p
      line-height 2
      .indent
        display inline-block
        width 2em
    ol
      list-style-type lower-alpha
    .elle
      font-weight bold
@media (max-width 768px)
  .page
    main
      padding 10px 30px

.expanded-full
  position fixed!important
  top 0
  left 0
  right 0
  bottom 0
  z-index zModal
.fa-close
  &:hover
    color c-1
/**
 * Visibility 
 */
.hide
  display none!important
.show
  display block!important

