/**
 * Position
 */
.center
  margin 0 auto
.left
  float left
.right
  float right
.abs-full
  position absolute!important
  top 0
  left 0
  width 100%
  height 100%

.expanded-full
  position fixed!important
  top 0
  left 0
  right 0
  bottom 0
  z-index zModal

.fixed-top
  position fixed
  top 0
.fixed-btm
  position fixed
  bottom 0

.scr-full
  width 100%

/*
 * Layout styl 
 */
// flex
.row
  display flex
  flex-wrap wrap
  margin-right -12px
  margin-left -12px
@media (max-width 1100px)
  // layout
  .row
    margin-right 0
    margin-left 0

.flex
  display flex
.redirect_col
  flex-direction column
.redirect_rcol
  flex-direction column-reverse
.redirect_rrow
  flex-direction row-reverse
.wrap
  flex-wrap wrap
.wrap_rev
  flex-wrap wrap-reverse
.row_end
  justify-content flex-end
.middle_center
  justify-content center
  align-items center
.right_center
  justify-content flex-end
  align-items center
.around_center
  justify-content space-around
  align-items center
.between_center
  justify-content space-between
  align-items center
.space_between
  justify-content space-between
.space_around
  justify-content space-around
.align_center
  align-items center
.align_btm
  align-items flex-end
.self_btm
  align-self flex-end
//flex: <flex-grow> <flex-shrink> <flex-basis>
.grow_1
  flex-grow 1
.grow_2
  flex-grow 2
.grow_3
  flex-grow 3
.self_start
  align-self flex-start
.self_end
  align-self flex-end
.self_center
  align-self center
.self_stretch
  align-self stretch
.row_1
  flex: 1

// table
.table
  display table
  width 100%
  .cell
    display table-cell

// grid design    
.float
  &:after
    content ''
    visibility hidden
    display block
    height 0
    clear both
  >[class^=col-]
    float left
.clearfix
  clear both



for c in (1..12)
  .col-{c}
    width (1/12*c)*100%
for c in (1..24)
  .c-{c}
    width (1/24*c)*100%

@media (min-width 769px)
  .s--hide
    display none
@media (min-width 768px) and (max-width 960px)
  .m-hide
    display none
  for c in (1..12)
    .m-{c}
      width (1/12*c)*100%
@media (max-width 768px)
  .s-hide
    display none
  for c in (1..12)
    .s-{c}
      width (1/12*c)*100%
@media (max-width 640px)
  .us-hide
    display none
  for c in (1..12)
    .us-{c}
      width (1/12*c)*100%
  
